# Template file for 'dotnet-sdk-bin'
pkgname=dotnet-sdk-bin
version=9.0.107
revision=1
archs="x86_64"
hostmakedepends="unzip"
depends="glibc libgcc icu-libs mit-krb5-libs libunwind openssl zlib"
short_desc="Microsoft .NET SDK binary for building dotnet-core meta package"
maintainer="VoidAlone <glassbox93@gmail.com>"
license="MIT"
homepage="https://dotnet.microsoft.com"
distfiles="https://builds.dotnet.microsoft.com/dotnet/Sdk/${version}/dotnet-sdk-${version}-linux-x64.tar.gz"
checksum=@68ccf4ccae2ebc7baafdeadab959158845c4b7d4c186c12f06e9433adf4136c5
tags="nonfree"
bootstrap="yes"
conflicts="dotnet-sdk"
repository="bootstrap"
do_install() {
	vmkdir /usr/lib/dotnet
	cp -a . ${DESTDIR}/usr/lib/dotnet

	vmkdir /usr/bin
	ln -sf /usr/lib/dotnet/dotnet ${DESTDIR}/usr/bin/dotnet
}

